# さくらレンタルサーバー用設定
<IfModule mod_rewrite.c>
    RewriteEngine On
    
    # HTTPSを強制
    RewriteCond %{HTTPS} off
    RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [R=301,L]
    
    # public フォルダーにリダイレクト
    RewriteCond %{REQUEST_URI} !^/public/
    RewriteRule ^(.*)$ /public/$1 [L]
</IfModule>